{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{workspaceRoot}/dist"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build:typecheck"],
      "cache": true
    },
    "test:ci": {
      "dependsOn": ["^build:typecheck"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^build:typecheck"],
      "cache": true
    },
    "build:typecheck": {
      "dependsOn": ["^build:typecheck"],
      "cache": true
    }
  },
  "defaultBase": "main",
  "defaultProject": "@pixiebrix/extension"
}
