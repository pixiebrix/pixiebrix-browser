{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "allowJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@img/*": ["img/*"],
      "@contrib/*": ["contrib/*"],
      "@schemas/*": ["schemas/*"],
      "vendors/*": ["src/vendors/*"]
    },
    "lib": ["dom", "es2019", "es2020"]
  },
  "exclude": [
    "node_modules",
    "venv",
    "**/bundles/**",
    "**/node_modules/**",
    "node_modules/**"
  ]
}
