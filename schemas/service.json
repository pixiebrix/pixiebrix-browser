{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://app.pixiebrix.com/schemas/service",
  "type": "object",
  "title": "PixieBrix Service",
  "description": "A PixieBrix service account",
  "definitions": {
    "configuredService": {
      "type": "object",
      "properties": {
        "serviceId": {
          "type": "string"
        },
        "proxy": {
          "type": "boolean",
          "description": "True to force the request to go through the PixieBrix proxy"
        },
        "config": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "configuredServiceOrVar": {
      "oneOf": [
        {"$ref":  "#/definitions/configuredService"},
        {
          "type": "string",
          "pattern": "^@?[a-zA-Z_]+$"
        }
      ]
    }
  },
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["v1"]
    },
    "kind": {
      "type": "string",
      "const": "service"
    },
    "metadata": { "$ref": "https://app.pixiebrix.com/schemas/metadata#" },
    "inputSchema": { "$ref": "http://json-schema.org/draft-07/schema#" },
    "isAvailable": {
      "type": "object",
      "properties": {
        "matchPatterns": {
          "oneOf": [
            {"type":  "string"},
            {"type":  "array",
              "items": {
                "type": "string"
              }
            }
          ]
        }
      }
    },
    "authentication": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "params": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "headers": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "oauth2": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "format": "uri"
                },
                "client_id": {
                  "type": "string"
                }
              },
              "additionalProperties": {
                "type": "string"
              }
            },
            "baseURL": {
              "type":  "string",
              "format": "uri"
            },
            "headers": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": ["oauth2"]
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": ["apiVersion", "kind", "metadata", "inputSchema"]
}
