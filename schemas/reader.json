{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://app.pixiebrix.com/schemas/reader#",
  "type": "object",
  "title": "PixieBrix Reader",
  "description": "A PixieBrix reader definition",
  "definitions": {
    "stringArray": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      ]
    },
    "frameworkReader": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["react", "angularjs", "vue", "emberjs"]
        },
        "selector": {
          "type": "string",
          "description": "The selector for the framework argument"
        },
        "optional": {
          "type": "boolean",
          "description": "True if the reader should return an empty result if the element is not found",
          "default": false
        },
        "attrs": {
          "deprecationMessage": "Deprecated in a favor of pathSpec",
          "description": "The attribute or attributes to read from the framework instance",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          ]
        },
        "pathSpec": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          ]
        },
        "traverseUp": {
          "type": "number"
        },
        "waitMillis": {
          "type": "number",
          "description": "Time to wait for the instance to become available, in milliseconds"
        },
        "rootProp": {
          "type": "string"
        }
      },
      "required": ["type", "selector"]
    },
    "windowReader": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "window"
        },
        "waitMillis": {
          "type": "number"
        }
      },
      "required": ["type"]
    },
    "jqueryReader": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "jquery"
        },
        "selectors": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "selector": {
                    "type": "string"
                  },
                  "multi": {
                    "type": "boolean"
                  },
                  "data": {
                    "type": "string"
                  },
                  "attr": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["string", "boolean", "number"]
                  },
                  "find": {
                    "type": "object",
                    "additionalProperties": true,
                    "minProperties": 1
                  }
                }
              }
            ]
          },
          "minProperties": 1
        }
      },
      "required": ["type", "selectors"]
    }
  },
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["v1"]
    },
    "kind": {
      "type": "string",
      "const": "reader"
    },
    "metadata": {
      "$ref": "https://app.pixiebrix.com/schemas/metadata#"
    },
    "outputSchema": {
      "$ref": "http://json-schema.org/draft-07/schema#"
    },
    "definition": {
      "type": "object",
      "properties": {
        "reader": {
          "anyOf": [
            {
              "$ref": "#/definitions/frameworkReader"
            },
            {
              "$ref": "#/definitions/windowReader"
            },
            {
              "$ref": "#/definitions/jqueryReader"
            }
          ]
        },
        "isAvailable": {
          "type": "object",
          "properties": {
            "matchPatterns": {
              "$ref": "#/definitions/stringArray"
            },
            "selectors": {
              "$ref": "#/definitions/stringArray"
            }
          }
        }
      },
      "required": ["reader"]
    }
  },
  "additionalProperties": false,
  "required": ["apiVersion", "kind", "metadata", "definition"]
}
