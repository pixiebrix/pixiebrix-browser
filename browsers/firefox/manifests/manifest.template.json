{
  "manifest_version": 2,
  "name": "PixieBrix WebApp Integrator",
  "short_name": "PixieBrix",
  "description": "PixieBrix - integrate your favorite web applications without code",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "content_security_policy": "default-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "optional_permissions": [
    "notifications",
    "clipboardWrite",
    "https://*/",
    "http://*/"
  ],
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "webNavigation"
  ],
  "web_accessible_resources": [
    "options.html",
    "options.css",
    "background.html",
    "background.js",
    "frame.html",
    "frame.css",
    "script.js"
  ],
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
